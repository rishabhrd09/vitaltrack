# VitalTrack Backend - Development Dockerfile
# Supports hot-reload for faster development

FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    libpq5 \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    ENVIRONMENT=development

EXPOSE 8000

# Create entrypoint script INSIDE the container (avoids Windows encoding issues)
RUN echo '#!/bin/sh' > /entrypoint.sh && \
    echo 'echo "VitalTrack API Starting..."' >> /entrypoint.sh && \
    echo 'echo "Waiting for database..."' >> /entrypoint.sh && \
    echo 'until pg_isready -h "${DATABASE_HOST:-db}" -p "${DATABASE_PORT:-5432}" > /dev/null 2>&1; do' >> /entrypoint.sh && \
    echo '  echo "Database not ready... waiting 2s"' >> /entrypoint.sh && \
    echo '  sleep 2' >> /entrypoint.sh && \
    echo 'done' >> /entrypoint.sh && \
    echo 'echo "Database ready! Running migrations..."' >> /entrypoint.sh && \
    echo 'alembic upgrade head' >> /entrypoint.sh && \
    echo 'echo "Starting server..."' >> /entrypoint.sh && \
    echo 'exec uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload' >> /entrypoint.sh && \
    chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
