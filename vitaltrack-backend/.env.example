# VitalTrack Backend - Environment Variables
# Copy this file to .env and update values for your environment

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=VitalTrack API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/vitaltrack

# Connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# SECURITY
# =============================================================================
# IMPORTANT: Change this in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-MIN-32-CHARS-LONG-RANDOM-STRING

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081","http://localhost:19006","exp://localhost:8081"]

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
